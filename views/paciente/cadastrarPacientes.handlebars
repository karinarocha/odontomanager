<div class="container">
    <h1>Cadastro de Paciente</h1>
    <br>
    <form action="/add-cadPaciente" method="POST">
    <h3>Informações Pessoais</h3>
    <br>
        <div class="row">
            <div class="col-md-9">
                <label for="Nome">Nome:<span class="text-danger">*</span></label>
                <input name="nome" type="nome" class="form-control" required>
            </div>
            <div class="col-md-3">
                <label for="sexo">Sexo:<span class="text-danger">*</span></label>
                <select name="sexo" id="sexo" class="form-control">
                    <option selected>Feminino</option>
                    <option>Masculino</option>
                    <option>Outros</option>
                </select>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-3">
                <label for="cpf">CPF:<span class="text-danger">*</span></label>
                <input name="cpf" type="text" required id="cpf" class="form-control" placeholder="000.000.000-00" minlength="11" maxlength="11">
            </div>
            <div class="col-md-3">
                <label for="rg">RG:<span class="text-danger">*</span></label>
                <input name="rg" type="text" required  class="form-control" placeholder="0000000-0" maxlength="8" minlength="8">
            </div>
            <div class="col-md-3">
                <label for="idade">Idade:<span class="text-danger">*</span></label>
                <input name="idade" id="idade" type="number" class="form-control" maxlength="2">
            </div>
            <div class="col-md-3">
                <label for="data">Data de Nascimento:<span class="text-danger">*</span></label>
                <input name="dataDeNascimento" type="date" id="date" class="form-control"  required>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-9">
                <label for="email">Email:</label>
                <input name="email" type="email" id="email" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="telefone">Telefone:<span class="text-danger">*</span></label>
                <input name="telefone" type="telefone" class="form-control" placeholder="(00) 00000-0000" required>
            </div>
        </div>
        <br>
        <h3>Endereço</h3>
        <br>
        <div class="row">
            <div class="col-md-2">
                <label for="cep">CEP:<span class="text-danger">*</span></label>
                <input name="cep" type="text" required id="cep" class="form-control" placeholder="00000-000" minlength="8" maxlength="9">
            </div>
            <div class="col-md-3">
                <label for="logradouro">Logradouro:<span class="text-danger">*</span></label>
                <input name="logradouro" required id="logradouro" type="text" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="bairro">Bairro:<span class="text-danger">*</span></label>
                <input name="bairro" required type="text" id="bairro" class="form-control">
            </div>
            <div class="col-md-2">
                <label for="cidade">Cidade:<span class="text-danger">*</span></label>
                <input name="cidade" required id="localidade" type="text" class="form-control">
            </div>
            <div class="col-md-2">
                <label for="inputEstado">Estado:<span class="text-danger">*</span></label>
                <input name="uf" id="uf" required  class="form-control">
            </div>
        </div>
        <br>
        <br>
        <button type="submit" class="btn-formulario">Salvar</button>
        <br>
        <br>
    </form>
</div>
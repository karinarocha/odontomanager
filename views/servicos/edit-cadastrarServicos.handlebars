<div class="container">
    <h1>Editar Serviço</h1>
    <br>
    <form action="/update-cadServico" method="POST">
    <input type="hidden" name="id" value="{{cadServico._id}}">
        <div class="row">
            <div class="col-md-6">
                <label for="nomeServico">Tipo de Serviço:<span class="text-danger">*</span></label>
                <input name="nomeServico" id="nomeServico" class="form-control" value="{{cadServico.nomeServico}}">
            </div>
            <div class="col-md-4">
                <label for="descricao">Descrição:</label>
                <input name="descricao" id="descricao" class="form-control" value="{{cadServico.descricao}}">
            </div>
            <div class="col-md-2">
                <label for="valor">Valor:<span class="text-danger">*</span></label>
                <input name="valor" type="number" step="0.010" class="form-control" value="{{cadServico.valor}}">
            </div>
        </div>
        <br>
        <button type="submit" class="btn-formulario">Salvar</button>
    </form>
</div>